<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000">
    <TextView
        android:id="@+id/lyla_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="24sp"
        android:text="Lyla"
        android:textColor="#ffffff"
        android:fontFamily="casual"
        android:layout_margin="2dp"
        android:background="#0000ff"/>

    <TextView
        android:id="@+id/me_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/lyla_text_view"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:text="Me"
        android:fontFamily="casual"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/natalie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#0000ff"
        android:fontFamily="casual"
        android:text="Natalie"
        android:layout_above="@id/lyla_text_view"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/jennie_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="24sp"
        android:text="Jennie"
        android:layout_margin="2dp"
        android:textColor="#ffffff"
        android:background="#0000ff"/>

    <TextView
        android:id="@+id/omoju_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/jennie_text_view"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="casual"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#0000ff"
        android:text="Omoju"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/amy_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/omoju_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="-71dp"
        android:layout_marginBottom="85dp"
        android:layout_toLeftOf="@id/jennie_text_view"
        android:background="#0000ff"
        android:fontFamily="casual"
        android:text="Amy"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ben_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#0000ff"
        android:fontFamily="casual"
        android:text="Ben"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/kunal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/ben_text_view"
        android:background="#0000ff"
        android:text="Kunal"
        android:textSize="24sp"
        android:fontFamily="casual"
        android:textColor="#ffffff"
        android:layout_margin="2dp" />

    <TextView
        android:id="@+id/kagure_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#0000ff"
        android:text="Kagure"
        android:layout_toEndOf="@id/ben_text_view"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:fontFamily="casual"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        />
</RelativeLayout>